post_install() {
	echo
	echo -e "\033[0;31mNOTE\033[0;37m: Crikey will work out of the box for most terminal
emulators, but xterm blocks events generated with XSendEvent
by default. To use crikey with xterm, you have two options:

   * Use crikey -t, to use the X Test extension instead of XSendEvent
   * Add to your .Xdefaults file: XTerm*allowSendEvents: true\033[0m
"
}
